<?xml version="1.0" encoding="UTF-8"?>
<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://princeomonu.com/ns/1.0" id="com.princeomonu.appstore" version="1.3.0">
	<name>
		Unofficial Appstore
	</name>
	<description>
		Unofficial Appstore.
	</description>
	<author href="http://princeomonu.com" email="omonuitanyi@gmail.com">
		Omonu Prince Itanyi
	</author>
	<platform name="android">
		<plugin name="cordova-plugin-splashscreen" spec="~5.0.3" />
		<allow-intent href="market:*" />
		<preference name="android-minSdkVersion" value="14" />
		<preference name="android-targetSdkVersion" value="22" />
		<preference name="BackgroundColor" value="#172b4d" />
		<preference name="SplashScreen" value="splash" />
		<preference name="SplashScreenDelay" value="2000" />
		<preference name="SplashShowOnlyFirstTime" value="true" />
		<preference name="ShowSplashScreenSpinner" value="false" />
		<preference name="FadeSplashScreen" value="true" />
		<preference name="SplashMaintainAspectRatio" value="true" />
		<preference name="SplashShowOnlyFirstTime" value="false" />
		<preference name="SplashShowOnlyFirstTime" value="false" />
		<splash qualifier="port-hdpi" src="res/screen/hdpi.png" />
		<splash qualifier="port-ldpi" src="res/screen/ldpi.png" />
		<splash qualifier="port-mdpi" src="res/screen/mdpi.png" />
		<splash qualifier="port-xhdpi" src="res/screen/xhdpi.png" />
		<icon qualifier="hdpi" src="res/icon/mipmap-hdpi/ic_launcher.png" />
		<icon qualifier="ldpi" src="res/icon/mipmap-ldpi/ic_launcher.png" />
		<icon qualifier="mdpi" src="res/icon/mipmap-mdpi/ic_launcher.png" />
		<icon qualifier="xhdpi" src="res/icon/mipmap-xhdpi/ic_launcher.png" />
		<icon qualifier="xxhdpi" src="res/icon/mipmap-xxhdpi/ic_launcher.png" />
		<icon qualifier="xxxhdpi" src="res/icon/mipmap-xxxhdpi/ic_launcher.png" />
	</platform>
	<access origin="*" />
	<!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
	<!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
	<plugin name="cordova-plugin-whitelist" version="1" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
</widget>
